@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Landing";
    Layout = "~/Views/Shared/_LayoutError.cshtml";
}

<div class="">
    <h1 class="error-title">Welcome to ACIAM 2024</h1>
    <p class="error-text">Thank you for visiting us.</p>
    <p class="text">You are currently not authorized to visit this page.</p>
    <p class="text">Please log in to proceed.</p>

    @if (SignInManager.IsSignedIn(User))
    {

        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-dark mt-4">Logout</button>
        </form>
    }
    else
    {
        <a class="btn btn-dark mt-4" asp-area="Identity" asp-page="/Account/Login">Login</a>
    }
</div>