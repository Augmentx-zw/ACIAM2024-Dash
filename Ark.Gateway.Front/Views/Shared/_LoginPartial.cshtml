@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager



<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-grey">Hello @User.Identity?.Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-grey" asp-area="Identity" asp-page="/Account/Logout">Logout</a>

        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-info btn-block" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>

